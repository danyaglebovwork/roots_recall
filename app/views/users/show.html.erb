<div class="container">
  <h1>Личный кабинет</h1>
  <div class="mb-3">
  <label class="form-label">Почта</label>
  <label class="form-control"><%= @user.email%></label>
  <label class="form-label">Имя</label>
  <label class="form-control"><%= @user.first_name%></label>
  <label class="form-label">Фамилия</label>
  <label class="form-control"><%= @user.last_name%></label>
  <label class="form-label">Отчество</label>
  <label class="form-control"><%= @user.father_name%></label>

  <h2>Воспоминания</h2>
  <% @user.flashbacks.each do |flashback| %>
    <label class="form-label"><%= flashback.title %></label>
    <audio controls class="w-100">
      <source
        src=<%= flashback.file.url %>
        type="audio/mpeg"
      />
      <source
        src=<%= flashback.file.url %>
        type="audio/ogg"
      />
      <source
        src=<%= flashback.file.url %> 
        type="audio/wav"
      />
      Audio not supported
    </audio>
  <% end %>
</div>
</div>
